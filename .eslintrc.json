{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb",
        "plugin:import/typescript"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "@typescript-eslint"
    ],
    "rules": {
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [
                    ".js",
                    ".jsx",
                    ".ts",
                    ".tsx"
                ]
            }
        ],
        "import/no-extraneous-dependencies": "off",
        "import/no-unresolved": [
            0,
            "never",
            {
                "caseSensitive": false
            }
        ],
        "no-use-before-define": "off",
        "import/extensions": [
            0,
            "never",
            "ignorePackages",
            {
                "ts": "never"
            }
        ]
    }
}